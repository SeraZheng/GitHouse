pod 'Moya'

# Main UI
pod 'TextFieldEffects'
pod 'SnapKit'
pod 'ChameleonFramework/Swift'
pod 'Spring', :git => 'https://github.com/MengTo/Spring.git', :branch => 'swift2'

# Tools
pod 'Localize-Swift'
pod 'KeychainAccess'
pod 'DGElasticPullToRefresh'

end
